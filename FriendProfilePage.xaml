<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="emotizeapp.Pages.FriendProfilePage"
             BackgroundColor="Silver">
  <ContentPage.Content>
    <StackLayout HorizontalOptions="Center">
      <Image 	x:Name="imgProfile"
			    Source="result.png"
          HorizontalOptions="Center"
			    HeightRequest="200"
			    Margin="0,20,0,0">
      </Image>
      <Label  x:Name="labelUser"
			  Text="NOME COGNOME"
			  HorizontalOptions="Center"
			  FontSize="20"
			  FontAttributes="Bold"
			  Margin="0,10,0,0"
			  TextColor="White">
      </Label>
      <Label  x:Name="labelDate"
			  Text="dd/MM/yyyy"
			  HorizontalOptions="Center"
			  FontSize="15"
			  Margin="0,5,0,0"
			  TextColor="White">
      </Label>
      <Label  x:Name="labelGender"
			  Text="Sesso"
			  HorizontalOptions="Center"
			  FontSize="15"
			  Margin="0,5,0,0"
			  TextColor="White">
      </Label>
      <Button	x:Name="backBtn"
            Text="Indietro"
            WidthRequest="150"
            HeightRequest="50"
            IsVisible="true"
            FontSize="13"
            Margin="51,40,50,0"
              FontAttributes="Bold"
			    BackgroundColor="White"
          TextColor="Black"
            Clicked="OnBackClicked">
      </Button>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>